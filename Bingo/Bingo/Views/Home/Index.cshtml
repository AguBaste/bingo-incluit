@{
    ViewData["Title"] = "Bingo";
    ViewData["Numero"] = ViewBag.numero;
}
@model Carton
<div class="text-center">
    <h1 class="display-4">Bingo</h1>
</div>
<div class="d-flex justify-content-sm-evenly mb-4">
  <button type="button" class="btn-primary" id="sortear"onClick="Sorteo()">Sortear numero</button>
</div>
<div class="container-lg ">
<table class="table text-xl-center col-6">
    @for (int f = 0; f < 3; f++)
    {   
        <tr class="row col-6">
            @for (int c = 0; c < 9; c++)
            {
                <td class="col bg-info text-light">
                    @Model.Numeros[c,f]
                </td>
            }
        </tr>
    }
</table>
<h2>Numeros sorteados</h2>
<p class="text-danger m-2 col-6 bg-info text-light" id="parrafo"></p>  
</div>

<script src="~/js/site.js" asp-append-version="true"></script>
